    <!-- /shop product listing -->
    <template id="loon_products" name="Products">
        <t t-call="website.layout">
            <div id="wrap" class="js_sale">
                <div class="oe_structure oe_empty oe_structure_not_nearest" id="oe_structure_website_sale_products_1" />
                <div class="container oe_website_sale pt-2">
                    <div class="row o_wsale_products_main_row">
                        <div id="products_grid" t-attf-class="col #{'o_wsale_layout_list' if layout_mode == 'list' else ''}">
                            <div t-if="bins" class="o_wsale_products_grid_table_wrapper">
                                <table class="table table-borderless m-0" t-att-data-ppg="ppg" t-att-data-ppr="ppr">
                                    <thead id="item_grid">
                                        <strong>Collection list</strong>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="bins" t-as="tr_product">
                                            <t t-foreach="tr_product" t-as="td_product">
                                                <t t-if="td_product.image_512">
                                                    <td class="oe_product">
                                                        <div class="o_wsale_product_grid_wrapper o_wsale_product_grid_wrapper_1_1">
                                                            <div class="card oe_product_cart" itemscope="itemscope" data-publish="on">
                                                                <a class="o_product_link css_editable_mode_hidden" data-oe-model="ir.ui.view" data-oe-id="1245" data-oe-field="arch" data-oe-xpath="/t[1]/form[1]/a[1]" href="/shop/warranty-29"></a>
                                                                <div class="card-body p-1 oe_product_image">
                                                                    <a class="d-block h-100" itemprop="url" href="/shop/warranty-29">
                                                                        <span data-oe-model="product.template" data-oe-id="29" data-oe-field="image_1920" data-oe-type="image" data-oe-expression="image_holder.image_1920" class="d-flex h-100 justify-content-center align-items-center" data-oe-xpath="/t[1]/form[1]/div[1]/a[1]/span[1]">
                                                                            <t t-set="product_source" t-value="image_data_uri(td_product.image_512)" />
                                                                            <img t-att-src="product_source" itemprop="image" class="img img-fluid" alt="Warranty" loading="lazy" style="" />
                                                                        </span>
                                                                    </a>
                                                                </div>
                                                                <div class="card-body p-0 o_wsale_product_information">
                                                                    <div class="p-2 o_wsale_product_information_text">
                                                                        <h6 class="o_wsale_products_item_title mb-1">
                                                                            <a data-oe-model="product.template" data-oe-id="29" data-oe-field="name" data-oe-type="char" data-oe-expression="product.name" class="text-primary text-decoration-none" itemprop="name" data-oe-xpath="/t[1]/form[1]/div[2]/div[1]/h6[1]/a[1]" href="/shop/warranty-29" content="Warranty">Warranty</a>
                                                                        </h6>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </t>
                                            </t>

                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <t t-else="">
                                <div class="text-center text-muted mt128 mb256">
                                    <t t-if="not search">
                                        <h3 class="mt8">No product defined</h3>
                                        <p t-if="category">
                                            No product defined in category "
                                            <strong t-esc="category.display_name" />
                                            ".
                                        </p>
                                    </t>
                                    <t t-else="">
                                        <h3 class="mt8">No results</h3>
                                        <p>
                                            No results for "
                                            <strong t-esc='search' />
                                            "
                                            <t t-if="category">
                                                in category "
                                                <strong t-esc="category.display_name" />
                                                "
                                            </t>
                                            .
                                        </p>
                                    </t>
                                    <p t-ignore="true" groups="sales_team.group_sale_manager">
                                        Click
                                        <i>'New'</i>
                                        in the top-right corner to create your first product.
                                    </p>
                                </div>
                            </t>
                            <!-- <div class="products_pager form-inline justify-content-center py-3">
                                <t t-call="website.pager"/>
                            </div> -->
                        </div>
                    </div>
                </div>
                <div class="oe_structure oe_empty oe_structure_not_nearest" id="oe_structure_website_sale_products_2" />
            </div>
        </t>
    </template>

    <!-- /shop product listing -->
    <template id="featured_products" name="Products">
        <t t-call="website.layout">
            <t t-set="additional_title">Featured products</t>
            <div id="wrap" class="js_sale">
                <div class="oe_structure oe_empty oe_structure_not_nearest" id="oe_structure_website_sale_products_1" />
                <div class="container oe_website_sale pt-2">
                    <div class="row o_wsale_products_main_row">
                        <div id="products_grid" t-attf-class="col #{'o_wsale_layout_list' if layout_mode == 'list' else ''}">
                            <t t-call="website_sale.products_breadcrumb">
                                <t t-set="_classes" t-valuef="w-100" />
                            </t>
                            <div t-if="bins" class="o_wsale_products_grid_table_wrapper">
                                <table class="table table-borderless m-0" t-att-data-ppg="ppg" t-att-data-ppr="ppr">
                                    <colgroup t-ignore="true">
                                        <!-- Force the number of columns (useful when only one row of (x < ppr) products) -->
                                        <col t-foreach="ppr" t-as="p" />
                                    </colgroup>
                                    <thead id="item_grid">
                                        <strong>Featured products</strong>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="bins" t-as="tr_product">
                                            <t t-foreach="tr_product" t-as="td_product">
                                                <t t-if="td_product">
                                                    <t t-set="product" t-value="td_product['product']" />
                                                    <!-- We use t-attf-class here to allow easier customization -->
                                                    <td t-att-colspan="td_product['x'] != 1 and td_product['x']" t-att-rowspan="td_product['y'] != 1 and td_product['y']" t-attf-class="oe_product" t-att-data-ribbon-id="td_product['ribbon'].id" style="border: 0;">
                                                        <div t-attf-class="o_wsale_product_grid_wrapper o_wsale_product_grid_wrapper_#{td_product['x']}_#{td_product['y']}">
                                                            <t t-call="website_sale.products_item">
                                                                <t t-set="product_image_big" t-value="td_product['x'] + td_product['y'] &gt; 2" />
                                                            </t>
                                                        </div>
                                                    </td>
                                                </t>
                                                <td t-else="" />
                                            </t>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <t t-else="">
                                <div class="text-center text-muted mt128 mb256">
                                    <t t-if="not search">
                                        <h3 class="mt8">No product defined</h3>
                                        <p t-if="category">
                                            No product defined in category "
                                            <strong t-esc="category.display_name" />
                                            ".
                                        </p>
                                    </t>
                                    <t t-else="">
                                        <h3 class="mt8">No results</h3>
                                        <p>
                                            No results for "
                                            <strong t-esc='search' />
                                            "
                                            <t t-if="category">
                                                in category "
                                                <strong t-esc="category.display_name" />
                                                "
                                            </t>
                                            .
                                        </p>
                                    </t>
                                    <p t-ignore="true" groups="sales_team.group_sale_manager">
                                        Click
                                        <i>'New'</i>
                                        in the top-right corner to create your first product.
                                    </p>
                                </div>
                            </t>
                            <div class="products_pager form-inline justify-content-center py-3">
                                <t t-call="website.pager" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="oe_structure oe_empty oe_structure_not_nearest" id="oe_structure_website_sale_products_2" />
            </div>
        </t>
    </template>

</odoo>