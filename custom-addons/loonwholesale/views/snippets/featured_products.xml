<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="loon_featured_products_snippet" name="One Banner Snippet">
        <div class="container-fluid">
            <div class="row d-flex align-items-stretch">
                <t t-foreach="featured_products" t-as="feature">
                    <div class="s_col_no_bgcolor pt16 pb16 col-lg-3">
                        <div class="card h-100" style="background-color: rgb(228, 228, 228) !important;">
                            <t t-set="product_source" t-value="image_data_uri(feature.image_512)" />
                            <img class="card-img-top" t-att-src="product_source" t-att-alt="feature.name" loading="lazy" data-original-id="445" t-att-data-original-src="product_source" data-mimetype="image/jpeg" aria-describedby="tooltip359613" />
                            <div class="card-body">
                                <h3 class="card-title">
                                    <a t-attf-href="/featured-products/products/#{slug(feature)}">
                                        <span t-esc="feature.name" />
                                    </a>
                                </h3>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </template>
</odoo>