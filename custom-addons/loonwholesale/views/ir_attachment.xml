<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_view_banner_tree" model="ir.ui.view">
        <field name="name">name</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <tree string="Attachments">
                <field name="name"/>
                <field name="website_url"/>
                <field name="slider_image"/>
            </tree>
        </field>
    </record>

    <record id="ir_attachment_form_view_inherit" model="ir.ui.view">
        <field name="name">banner.image.form.view</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mimetype']" position="after">
                <field name="slider_image" default="1"/>
                <field name="public"/>
                <field name="website_url"/>
            </xpath>
        </field>
    </record>

    <record id="action_banner_images" model="ir.actions.act_window">
        <field name="name">Banner Images</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.attachment</field>
        <field name="domain">[('slider_image', '=', True)]</field>
        <field name="view_id" ref="action_view_banner_tree"/>
    </record>

    <menuitem 
        name="Banner Images" 
        id="menu_banner_global" 
        sequence="22" 
        parent="website.menu_website_configuration" 
        groups="website.group_website_designer" 
        action="action_banner_images"/>

</odoo>